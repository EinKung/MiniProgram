.search_row {
  height: 90rpx;
  display: flex;
  padding: 10rpx;
}
.search_row input {
  border-radius: 10rpx;
  flex: 7;
  height: 100%;
  text-align: center;
  background-color: #ff0000;
  color: #ffffff;
}
.search_content {
  padding: 10rpx;
}
.search_content .search_item {
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border: 1rpx solid #cccccc;
  border-radius: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search_content .empty {
  padding-top: 100rpx;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 65rpx;
}
