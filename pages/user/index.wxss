.user_info_wrap {
  width: 100%;
  height: 45vh;
  background-color: #ffffff;
  position: relative;
  overflow: hidden;
}
.user_info_wrap button {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid #ff0000;
  color: #ff0000;
  font-size: 38rpx;
  padding: 30rpx;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  height: 45vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #ffffff;
  margin-top: 40rpx;
  font-size: 40rpx;
  background-color: #ff0000;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 95%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .history_wrap {
  background-color: #ff0000;
  display: flex;
  border-radius: 10rpx;
  padding: 20rpx;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: #ffffff;
}
.user_content .user_main .history_wrap navigator .his_name {
  color: #ffffff;
}
.user_content .user_main .orders_wrap {
  border-radius: 10rpx;
  background-color: #ff0000;
  margin-top: 20rpx;
}
.user_content .user_main .orders_wrap .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ffffff;
  color: #ffffff;
  text-align: center;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
  padding: 20rpx;
}
.user_content .user_main .orders_wrap .order_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: #ffffff;
}
.user_content .user_main .orders_wrap .order_content navigator .order_name {
  color: #ffffff;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #ff0000;
  padding: 20rpx;
  color: #ffffff;
  border-radius: 10rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #ff0000;
  border-radius: 10rpx;
}
.user_content .user_main .app_info_wrap .app_info_item_contact {
  padding: 20rpx;
  color: #ffffff;
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .app_info_wrap .app_info_item {
  border-top: #ffffff 1rpx solid;
  padding: 20rpx;
  color: #ffffff;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #ff0000;
  padding: 20rpx;
  color: #ffffff;
  border-radius: 10rpx;
}
.blank {
  padding-top: 820rpx;
}
